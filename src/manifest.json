{
    "name": "Battery Charging Change Notifier",
    "homepage_url": "https://github.com/johanhs/battery-charging-change-notifier",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "serviceWorker/serviceWorker.js"
    },
    "icons": {
        "16": "assets/icon16.png",
        "32": "assets/icon32.png",
        "48": "assets/icon48.png",
        "128": "assets/icon128.png"
    },
    "description": "Get notified when your battery stop or start charging. Useful when your charger is not working properly or accidentally disconnects.",
    "permissions": ["offscreen", "notifications"]
}
